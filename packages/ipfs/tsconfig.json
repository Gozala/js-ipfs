{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noEmitHelpers": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "strict": true,
    "alwaysStrict": true,
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "ES5",
    "module": "CommonJS",
    "baseUrl": ".",
    "paths": {
      "*": [
        "../../types/*",
        "node_modules/*"
      ]
    },
    "outDir": "./dist/"
  },
  "include": [
    "src",
    "node_modules/ipfs-core-utils/src/files/normalise-input.js",
    "../../node_modules/dag-cbor-links/src/**/**.js"
  ],
  "exclude": [
    "dist",
    "test",
    "src/http/**/**.js",
    "src/cli/**/**.js",
    "node_modules",
    "src/core/components/object/**/*.js",
  ],
  "compileOnSave": false
}